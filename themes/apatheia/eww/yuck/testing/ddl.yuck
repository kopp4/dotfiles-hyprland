(defwidget ddl []
  (box
    :class "bar_class"
    :halign "center"
    :orientation "h"
    :space-evenly false
   (eventbox
       :onhover "${EWW_CMD} update ddls_reveal=true todos_reveal=true"
       :onhoverlost "${EWW_CMD} update ddls_reveal=false todos_reveal=false"
     (box
        :class "revealer"
        :space-evenly false
        :orientation "v"
       (ddl-header)
       (revealer
         :class "revealer"
         :transition "slidedown"
         :reveal ddls_reveal
         :duration "450ms")))))
        ; (ddl-children))))))

(defwidget ddl-header []
         (box
          :space-evenly false
          :orientation "h"
          (launcher)
          (label :class "ddl_days" :text {ddl_days_jlpt + " days "})
          (label :class "ddl_weeks" :text { (ddl_days_jlpt - ddl_days_jlpt % 7 ) / 7 + " weeks "})
          (label :class "ddl_left" :text " left for ")
          (label :class "ddl_event" :text "JLPT N1")))

