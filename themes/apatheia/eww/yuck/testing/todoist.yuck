(defwidget todowidget []
  (box
    :class "bar_class"
    :space-evenly false
    :halign "center"
   (eventbox
       :onhover "${EWW_CMD} update todos_reveal=true ddls_reveal=true"
       :onhoverlost "${EWW_CMD} update todos_reveal=false ddls_reveal=false"
     (box
       :class "revealer"
       :space-evenly false
       :orientation "v"


       (box
         :class "todoist-header-text-button"
         :orientation "h"
         :spacing 60
         :space-evenly false

        (box
          :class "todoist-header-text"
          :orientation "h"
          :space-evenly false
         ; (label
         ;   :class "todos-reminder"
         ;   :text "You still have ")
         (Testing_sundial)
         (sep)
         (label
           :class "todos-number"
           :text {todos-number + " "})
         (label
           :class "todos-reminder"
           :text "todos left !!"))



        (button
          :timeout "5s"
          :class "refresh-todos"
          ; todos else 
          :onclick "todoist-cli sync && notify-send 'Success' 'Please manually refresh eww'"
          (label
            :class "refresh-icon"
            :text "")))
      (revealer
        :halign "start"
        :class "revealer"
        :transition "slidedown"
        :reveal todos_reveal
        :duration "450ms"
        (label
          :class "todos-content"
          :text "${ todos }"
          :wrap true))))))

